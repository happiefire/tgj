@import "partials/variables"

@import "partials/mixins/mx_border"
@import "partials/mixins/mx_gray"

@import "partials/generals/helpers"
@import "partials/generals/reset"
@import "partials/generals/typography"

@import "partials/components/navpane"
@import "partials/components/card"
@import "partials/components/buttons"
@import "partials/components/rules"


html, body, .editor-app-wrap
  width: 100%
  height: 100%

.main-wrap
  margin-left: 0

.toolbar-wrap
  z-index: 2
  left: 0
  background-color: $gray-darker
  color: #fff

.exercise-new-form
  width: 500px
  
.editor-main-wrap
  height: 100%
  width: 100%

.editor-stage-wrap
  position: relative
  z-index: 1
  height: 100%
  width: 100%

  .editor-stage-container
    position: absolute
    width: 100%
    top: $toolbar-height
    bottom: 0
    .display-pane, .editor-pane
      height: 100%
      overflow-y: scroll
      position: absolute
    .display-pane
      top: 0
      left: 0
      width: 60%
      min-width: 600px
      z-index: 1
      background-color: gray(96.5)
    .editor-pane
      top: 0
      right: 0
      width: 40%
      z-index: 100
      _border-left()
      background-color: #fff


.display-pane
  padding: 12px 18px
  padding-bottom: 40px
  .exercise-content-wrap
    border: 1px solid $border-color
    min-height: 1px
    background-color: #fff
    margin: auto
    max-width: 700px

.each-pb-wrap
  margin: -1px
  border: 1px solid $border-color
  .each-pb-header
    padding: 10px 20px
    background-color: $gray-lighter
    select.each-pb-type
      display: inline-block
      min-width: 80px
      font-size: 12px;
      line-height: 1;
      background-color: #fff;
      background-image: none;
      border: 1px solid #ccc;
      border-radius: 4px;
      float: right

  .each-pb-content, .each-pb-control
    padding: 20px
    
  .each-pb-control
    padding-top: 10px
    padding-bottom: 10px
    border-top: 1px dotted $border-color
    
    .header-text
      display: inline-block
      margin: 0px 15px 0px 0
    .each-option
      text-align: center
      display: inline-block
      width: 30px
      height: 30px
      line-height: 28px
      border-radius: 100%
      border: 1px dotted $gray 
      margin: 0 6px
      cursor: pointer
      &:hover
        border-style: solid
      &.selected
        border: 1px solid darken($theme-green, 5%)
        background-color: $theme-green
        color: #fff

.editor-pane
  .editor-header-wrap
    _border-bottom()
    .editor-header-container
      padding: 15px 20px
      .header-text
        font-size: 1.25em
  .editor-body-wrap
    _border-bottom()
    .editor-pb-text-container
      padding: 15px 20px
      border: 1px dotted $border-color
    .editor-pb-image-container
      padding: 10px 20px
      .editor-pb-image-dropbox
        border: 1px dashed $gray
        border-radius: $border-radius
        .placeholder-text
          line-height: 50px
          text-align: center
  .editor-bottom-controller-container
    padding: 10px 20px

