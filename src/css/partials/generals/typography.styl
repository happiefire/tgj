// Body reset

html 
  font-size: 10px
  font-size: $font-size
  -webkit-tap-highlight-color: rgba(0,0,0,0)


body 
  font-family: $font-family
  line-height: $line-height
  color: $font-color


// Reset fonts for relevant elements
input,
button,
select,
textarea 
  font-family: inherit
  font-size: inherit
  line-height: inherit



// Links
a 
  color: $link-color
  text-decoration: none

  &:hover, &:focus 
    color: $link-hover-color
    text-decoration: underline
  


// Headings
// -------------------------
h1 { font-size: 2em; }
h2 { font-size: 1.7em; }
h3 { font-size: 1.5em; }
h4 { font-size: 1.25em; }
h5 { font-size: 1em; }
h6 { font-size: 0.8em; }

h1, h2, h3, h4, h5, h6,
  font-weight: $headings-font-weight
  line-height: $headings-line-height

  small, .small 
    font-weight: normal
    line-height: 1
  


h1, h2, h3,
  margin-top: $line-height-px
  margin-bottom: ($line-height-px / 2)
  small, .small, &.small
    font-size: 65%
  

h4, h5, h6,
  margin-top: ($line-height-px / 2)
  margin-bottom: ($line-height-px / 2)
  small, .small, &.small 
    font-size: 75%
  


// Body text
// -------------------------
p 
  margin: 0 0 ($line-height-px / 2)


