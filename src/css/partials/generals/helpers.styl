.clearfix
  &:before, &:after
    display: table
    content: " "
  &:after
    clear: both

.pull-right
  float: right !important

.pull-left
  float: left !important

.inline
  display: inline-block

// helpers that unset default styles

ul.unstyled,
.list-unstyled
  padding-left: 0
  list-style: none

ul.inline,
.list-inline
  @extend .list-unstyled
  margin-left: -5px
  & > li 
    display: inline-block
    padding-left: 5px
    padding-right: 5px

a.unstyled,
.a-unstyled
  color: inherit
  text-decoration: none
  &:hover, &:focus
    color: inherit
    text-decoration: none

  