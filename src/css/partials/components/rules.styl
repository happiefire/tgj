hr 
  height: 0
  -webkit-box-sizing: content-box
  -moz-box-sizing: content-box
  box-sizing: content-box
  margin-top: 20px
  margin-bottom: 20px
  border: 0
  border-top: 1px solid $gray-lighter
  
  &.simple
    margin: 0
  &.dark
    border-color: $gray-dark


.vrt-rule
  display: inline
  width: 1px
  border-right: 1px solid $gray-lighter