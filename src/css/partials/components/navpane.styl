$navpane-bg = $gray-darker
.navpane
  width: 100%
  height: 100%
  background-color: $navpane-bg
  font-size: 16px
  color: $gray
  .navpane-nav
    ul
      li
        display: block
        a
          @extend .a-unstyled
          display: block
          padding: 15px
          cursor: pointer
          color: $gray
          // transition: color 0.2s

          &:hover, &:focus
            color: $gray-light
            // background-color: darken($navpane-bg, 12%)
          &.active, &:active
            color: $gray-lighter
            background-color: $gray-darkest


.brand
  position: absolute
  bottom: 0
  width: 100%
  .logo
    padding: 15px
