script(id='template-classes-new' type='text/ng-template')

  .toolbar-wrap
    .toolbar-container
      .toolbar-pos-left
        .toolbar-component
          .page-title 创建新班级

      .toolbar-pos-right
        .toolbar-component
          a.btn 完成

  .stage-wrap(ng-controller="CreateClassController")
    .stage-container-left
      form.new-class-form(role="form" ng-show="class.code===undefined")
        .form-group
          label(for="class-name")
            |班级名称
          input.form-control#class-name(type="text" placeholder="请填写班级名称（必填）" ng-model='class.name')
        .form-group
          label(for="class-teacher")
            |负责老师
          p.form-control-static {{teacherName}}
        .form-group
          label(for="class-subject")
            |学科
          p.form-control-static {{teacherSubject | subjectFilter}}
        //- .form-group
        //-   label(for="class-comment")
        //-     |备注
        //-     input.form-control#class-comment(type="text")
        
        //- .form-group
        //-   label 邀请码有效期
