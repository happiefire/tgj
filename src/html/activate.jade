extend base

block body
  section#activate
    .container
      h1.text-center 激活账号
      .row
        .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
          form#activate-form
            .form-group
              label 邮箱
              p#activate-email.form-control-static
                |example@gmail.com
            .form-group
              .row
                .col-xs-6
                  label 密码*
                  input#activate-password.form-control(type="password" placeholder="设置一个密码" required)
                .col-xs-6
                  label 确认密码*
                  input#activate-password-confirm.form-control(type="password" placeholder="再次确认密码" required)
            .form-group
              label 姓名*
              input#activate-name.form-control(type="text" placeholder="姓名" required)
            .form-group
              .row
                .col-xs-6
                  label 年级与学科*
                  select#activate-grade.form-control
                    option 您教的年级和学科
                    option ---
                    option 高中数学
                    option 高中物理
                    option 高中化学
                    option ---
                    option 初中数学
                    option 初中物理
                    option 初中化学
                .col-xs-6
                  label 手机号 (选填)
                  input#activate-mobile.form-control(type="text" placeholder="用于短信通知" required)
            p.alert.alert-info 填写上列信息以激活您的账号，*为必填项。
            a#do-signup-btn.btn.btn-info.btn-block 激活账号

block bodyScripts
  script(src='js/activate.js')